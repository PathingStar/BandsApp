@model BandsApp.Web.Models.Band
@{
    Layout = "_Layout";
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <h2>@Model.Name</h2>
    <img src="/Img/@Model.ImageUrl" alt="@Model.Name" width="300px" />
    <p>@Model.Description</p>
    <iframe src="https://www.youtube.com/embed/@Model.VideoUrl"></iframe>
    <h3>Album</h3>
    <ol>
        @foreach (var item in Model.Album)
        {
            <li>@item</li>
        }
    </ol>
        <p><a href="/"><- Tillbaka</a></p>
    </body>
    </html>